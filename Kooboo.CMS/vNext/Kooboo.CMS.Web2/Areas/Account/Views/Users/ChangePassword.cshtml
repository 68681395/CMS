@model Kooboo.CMS.Web2.Areas.Account.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change password".Localize();
    Layout = "~/Views/Shared/Blank.cshtml";
}
@section Panel{
    <ul class="header-panel">
        <li><a data-ajaxform="">@Html.IconImage("save") @("Save".Localize())</a></li>

        @foreach (var group in Kooboo.CMS.Sites.Extension.UI.TopToolbar.ToolbarButtons.GetToolbarButtons(ViewContext.RequestContext))
        {
            @Html.Partial("_ToolbarGroupButtons", group)
        }

        <li><a href="@ViewContext.RequestContext.GetRequestValue("return")">@Html.IconImage("back") @("Cancel".Localize())</a></li>
    </ul>
}

<div class="common-form">
    @using (Html.BeginForm())
    {
        <table>
            @Html.EditorFor(m => m.OldPassword, new { HtmlAttributes = new { @class = "medium", autocomplete = "off" } })
            @Html.EditorFor(m => m.NewPassword, new { HtmlAttributes = new { @class = "medium", autocomplete = "off" } })
            @Html.EditorFor(m => m.NewPassword1, new { HtmlAttributes = new { @class = "medium", autocomplete = "off" } })
        </table>
    }
</div>
